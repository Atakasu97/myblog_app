<div class="container">
  <div class="row">
    <% @users.each do |user| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= user.name %></h3>
          <p><%= gravatar_for(user) %></p>
          <p><%= user.email %></p>
          <p>
            <%= link_to "edit", "/users/#{user.id}/edit", class: 'btn btn-primary' %>
            <%= link_to "delete", user, class: 'btn btn-danger', method: :delete, data: {confirm: "You sure?"} %>
          </p>
        </div>
      </div>

    </div>
    <% end %>
  </div>
</div>
